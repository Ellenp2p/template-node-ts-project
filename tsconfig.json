{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}